<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.phuanh004.eznote.SignUpActivity">

    <TextView
        android:text="EzNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="144dp"
        android:id="@+id/tvLogo"
        tools:layout_editor_absoluteY="57dp"
        android:textSize="30sp" />

    <Button
        android:text="Sign Up"
        android:layout_width="312dp"
        android:layout_height="60dp"
        tools:layout_editor_absoluteX="36dp"
        android:id="@+id/btnSignUp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/etPhones" />

    <EditText
        android:layout_width="312dp"
        android:layout_height="49dp"
        android:inputType="textPersonName"
        android:ems="10"
        tools:layout_editor_absoluteX="36dp"
        android:id="@+id/etNames"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/tvLogo"
        android:hint="Full Name" />

    <EditText
        android:layout_width="312dp"
        android:layout_height="49dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        tools:layout_editor_absoluteX="36dp"
        android:id="@+id/etEmails"
        android:hint="Email"
        tools:layout_editor_absoluteY="190dp" />

    <EditText
        android:layout_width="312dp"
        android:layout_height="49dp"
        android:inputType="textPassword"
        android:ems="10"
        tools:layout_editor_absoluteX="36dp"
        android:id="@+id/etPasss"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/etEmails"
        android:hint="Password" />

    <EditText
        android:layout_width="312dp"
        android:layout_height="49dp"
        android:inputType="phone"
        android:ems="10"
        tools:layout_editor_absoluteX="36dp"
        android:id="@+id/etPhones"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/etPasss"
        android:hint="Phone" />

</android.support.constraint.ConstraintLayout>
